<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/StyleHome.css")" rel="stylesheet" type="text/css" />
    @RenderSection("Styles", false)
</head>
<body>
    <header>
        <div class="content-wrapper white-background">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("your logo here", "Index", "Home")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    Login
                </section>
                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>
    <div id ="body" class="center">
        <div class="content-wrapper">
            @RenderBody()
        </div>
    </div>
    <footer>
        <div class="content-wrapper white-background">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year</p>
            </div>
            <div class="float-right">
                <p>Paulius Savickas IF-2/10</p>
            </div>

        </div>
    </footer>
    <script src="@Url.Content("~/Scripts/jquery-2.1.0.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/JS.js")" type="text/javascript"></script>
        </body>
        </html>
